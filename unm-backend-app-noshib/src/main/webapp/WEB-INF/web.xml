<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<servlet>
		<servlet-name>BackendServlet</servlet-name>
		<servlet-class>fr.univmobile.backend.BackendServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<param-name>baseURL</param-name>
			<param-value>http://localhost:8380/unm-backend/</param-value>
		</init-param>
		<init-param>
			<param-name>optional-jsonBaseURLs</param-name>
			<param-value>
				http://localhost:8380/unm-backend/json/
				http://10.0.2.2:8380/unm-backend/json/
				http://192.168.0.40:8080/unm-backend/json/
				http://192.168.0.10:8080/unm-backend/json/
				http://localhost:8080/unm-backend/json/
			</param-value>
		</init-param>
		<init-param>
			<param-name>dataDir</param-name>
			<param-value>/tmp/unm-backend/dataDir</param-value>
		</init-param>
		<init-param>
			<param-name>twitter.consumerKey</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>twitter.consumerSecret</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>shibboleth.ssoBaseURL</param-name>
			<param-value>https://univmobile-dev.univ-paris1.fr/Shibboleth.sso/Login</param-value>
		</init-param>
		<init-param>
			<param-name>shibboleth.targetBaseURL</param-name>
			<param-value>https://univmobile-dev.univ-paris1.fr/testSP/</param-value>
		</init-param>
		<init-param>
			<param-name>shibboleth.callbackURL</param-name>
			<param-value>https://univmobile-dev.univ-paris1.fr/testSP/success</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>BackendServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- Use NoShibbolethFilter only when Shibboleth is not available (-it.) -->
	<!-- It will crash on a production environment, with Shibboleth/HTTPS. -->
	 
	<filter>
		<filter-name>NoShibbolethFilter</filter-name>
		<filter-class>fr.univmobile.backend.noshib.NoShibbolethFilter</filter-class>
		<init-param>
			<param-name>hosts.allow</param-name>
			<param-value>
				Davids-MacBook-Pro.local
				mbpro.local
				unm-ci
				unm-ios7
				unm-ios6a.local
				unm-ios6b.local
				unm-ios6a
				unm-ios6b
				unm-ios7a.local
				unm-ios7b.local
				unm-ios7a
				unm-ios7b
				ks3haxm
			</param-value>
		</init-param>
		<init-param>
			<param-name>hosts.deny</param-name>
			<param-value>
				univmobile-dev
			</param-value>
		</init-param>
	</filter>	
	
	<filter-mapping>
		<filter-name>NoShibbolethFilter</filter-name>
		<servlet-name>BackendServlet</servlet-name>
	</filter-mapping>

	<servlet>
		<servlet-name>PlainContentServlet</servlet-name>
		<servlet-class>fr.univmobile.web.commons.PlainContentServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>PlainContentServlet</servlet-name>
		<url-pattern>/css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PlainContentServlet</servlet-name>
		<url-pattern>/css/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PlainContentServlet</servlet-name>
		<url-pattern>/js</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>PlainContentServlet</servlet-name>
		<url-pattern>/js/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PlainContentServlet</servlet-name>
		<url-pattern>/img</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>PlainContentServlet</servlet-name>
		<url-pattern>/img/*</url-pattern>
	</servlet-mapping>

	<resource-ref>
		<res-ref-name>jdbc/univmobile</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>
