<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	
	<context-param>
		<param-name>nearestMaxDistanceInMeters</param-name>
		<param-value>6000</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/application-context.xml</param-value>
	</context-param>

	<context-param>
		<param-name>baseURL</param-name>
		<param-value>https://univmobile-dev.univ-paris1.fr/admin/</param-value>
	</context-param>

	<context-param>
		<param-name>menuImagesBaseUrl</param-name>
		<param-value>http://univmobile-dev.univ-paris1.fr/admin/files/upload</param-value>
	</context-param>
	<context-param>
		<param-name>menuImagesBaseDir</param-name>
		<param-value>/var/univmobile/unm-backend/dataDir/upload</param-value>
	</context-param>

        <context-param>
                <param-name>qrCodesBaseUrl</param-name>
                <param-value>http://univmobile-dev.univ-paris1.fr/admin/files/qrcodes</param-value>
        </context-param>

        <context-param>
                <param-name>imageMapsBaseUrl</param-name>
                <param-value>http://univmobile-dev.univ-paris1.fr/admin/files/imagemaps</param-value>
        </context-param>

        <context-param>
                <param-name>imageMapsBaseDir</param-name>
                <param-value>/var/univmobile/unm-backend/dataDir/imagemaps</param-value>
        </context-param>

        <context-param>
                <param-name>universitiesLogoBaseUrl</param-name>
                <param-value>http://univmobile-dev.univ-paris1.fr/admin/files/universitieslogos</param-value>
        </context-param>

        <context-param>
                <param-name>universitiesLogoBaseDir</param-name>
                <param-value>/var/univmobile/unm-backend/dataDir/universitieslogos</param-value>
        </context-param>

        <context-param>
                <param-name>categoriesIconsBaseUrl</param-name>
                <param-value>http://univmobile-dev.univ-paris1.fr/admin/files/categoriesicons</param-value>
        </context-param>

        <context-param>
                <param-name>categoriesIconsBaseDir</param-name>
                <param-value>/var/univmobile/unm-backend/dataDir/categoriesicons</param-value>
        </context-param>

        <context-param>
                <param-name>qrBaseDir</param-name>
                <param-value>/var/univmobile/unm-backend/dataDir/qrcodes</param-value>
        </context-param>

 <context-param>
                <param-name>qrCodeLinkPattern</param-name>
                <param-value>http://univmobile-dev.univ-paris1.fr/unm-mobileweb%LINK%</param-value>
        <!--    <param-value>univmobile://show_image_map:%LINK%</param-value>-->
        </context-param>

        <context-param>
                <param-name>notification.days</param-name>
                <param-value>10</param-value>
        </context-param>


        <servlet>
                <servlet-name>BackendServlet</servlet-name>
                <servlet-class>fr.univmobile.backend.BackendServlet</servlet-class>
                <init-param>
                        <param-name>optional-jsonBaseURLs</param-name>
                        <param-value>
                                https://univmobile-dev.univ-paris1.fr/admin/json/
                                http://127.0.0.1:8080/unm-backend/json/
                        </param-value>
                </init-param>
                <init-param>
                        <param-name>dataDir</param-name>
                        <param-value>/var/univmobile/unm-backend/dataDir</param-value>
                </init-param>
                <init-param>
                        <param-name>twitter.consumerKey</param-name>
                        <param-value>dd</param-value>
                </init-param>
                <init-param>
                        <param-name>twitter.consumerSecret</param-name>
                        <param-value>dd</param-value>
                </init-param>
                <init-param>
                        <param-name>shibboleth.ssoBaseURL</param-name>
                        <param-value>https://univmobile-dev.univ-paris1.fr/Shibboleth.sso/Login</param-value>
                </init-param>
                <init-param>
                        <param-name>shibboleth.targetBaseURL</param-name>
                        <param-value>https://univmobile-dev.univ-paris1.fr/admin/</param-value>
                </init-param>
                <init-param>
                        <param-name>shibboleth.callbackURL</param-name>
                        <param-value>https://univmobile-dev.univ-paris1.fr/admin/success</param-value>
                </init-param>
                <load-on-startup>1</load-on-startup>
        </servlet>

       <servlet-mapping>
                <servlet-name>BackendServlet</servlet-name>
                <url-pattern>/</url-pattern>
        </servlet-mapping>

        <servlet>
                <servlet-name>dispatcher</servlet-name>
                <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
            <init-param>
                        <param-name>contextConfigLocation</param-name>
                <param-value>WEB-INF/dispatcher-servlet.xml</param-value>
            </init-param>
                <load-on-startup>2</load-on-startup>
        </servlet>

        <servlet-mapping>
                <servlet-name>dispatcher</servlet-name>
                <url-pattern>/api/*</url-pattern>
        </servlet-mapping>

        <servlet>
                <servlet-name>PlainContentServlet</servlet-name>
                <servlet-class>fr.univmobile.web.commons.PlainContentServlet</servlet-class>
                <load-on-startup>1</load-on-startup>
        </servlet>
        <servlet-mapping>
                <servlet-name>PlainContentServlet</servlet-name>
                <url-pattern>/css</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>PlainContentServlet</servlet-name>
                <url-pattern>/css/*</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>PlainContentServlet</servlet-name>
                <url-pattern>/js</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>PlainContentServlet</servlet-name>
                <url-pattern>/js/*</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>PlainContentServlet</servlet-name>
                <url-pattern>/img</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>PlainContentServlet</servlet-name>
                <url-pattern>/img/*</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>PlainContentServlet</servlet-name>
                <url-pattern>/fonts</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>PlainContentServlet</servlet-name>
                <url-pattern>/fonts/*</url-pattern>
        </servlet-mapping>

        <resource-ref>
                <res-ref-name>jdbc/univmobile</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
        </resource-ref>

        <filter>
                <filter-name>CharacterEncoding</filter-name>
                <filter-class>
                        org.springframework.web.filter.CharacterEncodingFilter
                </filter-class>
                <init-param>
                        <param-name>encoding</param-name>
                        <param-value>UTF-8</param-value>
                </init-param>
                <init-param>
                        <param-name>forceEncoding</param-name>
                        <param-value>true</param-value>
                </init-param>
        </filter>

        <filter-mapping>
                <filter-name>CharacterEncoding</filter-name>
                <url-pattern>/*</url-pattern>
        </filter-mapping>

       <!-- Spring Security -->
       <filter>
               <filter-name>springSecurityFilterChain</filter-name>
               <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
       </filter>

       <filter-mapping>
               <filter-name>springSecurityFilterChain</filter-name>
               <servlet-name>dispatcher</servlet-name>
       </filter-mapping>
       
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>	

</web-app>
